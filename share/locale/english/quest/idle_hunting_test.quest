quest idle_hunting_test begin
    state start begin
        when 20016.chat."Test Idle" begin
            say_title("Test")
            say("Testing idle hunting functions")
            
            local time_left = pc.get_idle_hunting_time_left()
            say("Time left: "..time_left)
            
            local is_active = pc.is_idle_hunting_active()
            if is_active then
                say("Idle hunting is active")
            else
                say("Idle hunting is NOT active")
            end
        end
    end
end
